{
  "name": "pearson-compounds",
  "version": "0.2.1",
  "description": "Atomic React Components",
  "main": "./build/dist.compounds.js",
  "author": "Pearson Design Accelerator",
  "license": "MIT",
  "homepage": "http://pearson-higher-ed.github.io/compounds/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pearson-Higher-Ed/compounds"
  },
  "scripts": {
    "start": "npm run serve",
    "serve": "NODE_ENV=development webpack-dev-server",
    "clean": "rimraf build",
    "deploy": "git subtree push --prefix build origin gh-pages",
    "test": "jest --coverage",
    "build": "NODE_ENV=production npm run clean && webpack -p",
    "gen-changelog": "node ./npm_scripts/gen-changelog.js",
    "version": "node ./npm_scripts/version.js",
    "ci": "node ./npm_scripts/ci.js",
    "release": "node ./npm_scripts/release.js",
    "verify": "node ./npm_scripts/verify.js",
    "copy-utils": "node ./node_modules/@pearson-components/npm-scripts/npm_scripts/cross-platform.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "jsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "**/src/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(build|node_modules|demo|fonts|npm_scripts|coverage)/"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  },
  "devDependencies": {
    "@pearson-components/npm-scripts": "^0.3.12",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.3.2",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "colors": "~1.1.2",
    "conventional-changelog": "~1.1.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.5.1",
    "eslint": "^1.10.3",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-react": "~3.16.1",
    "expect": "~1.18.0",
    "expect-jsx": "~2.5.1",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "fs-extra": "^1.0.0",
    "history": "^4.5.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "ignore-styles": "~5.0.1",
    "image-webpack-loader": "^3.2.0",
    "intl": "~1.1.0",
    "jest": "16.0.2",
    "node-sass": "^4.5.0",
    "pearson-elements": "^1.4.2",
    "react": "^15.3.0",
    "react-addons-test-utils": "^15.0.0",
    "react-dom": "^15.3.0",
    "react-intl": "~2.0.1",
    "react-router-dom": "^4.0.0-beta.6",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.0",
    "semver": "~5.1.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "uuid": "2.0.2",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0"
  },
  "keywords": [
    "pearson-components"
  ]
}
