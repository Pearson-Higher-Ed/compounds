{
  "name": "pearson-compounds",
  "version": "0.0.0",
  "description": "Core React.js components for Pearson UIs",
  "files": [
    "lib",
    "umd"
  ],
  "main": "lib/index.js",
  "scripts": {
    "start": "node server.js",
    "build": "babel ./src -d ./lib --ignore '__tests__'",
    "build-umd": "NODE_ENV=production webpack ./index.js umd/pearson-compounds.js",
    "build-min": "NODE_ENV=production webpack -p ./index.js umd/pearson-compounds.min.js",
    "build-all": "npm run build && npm run build-umd && npm run build-min",
    "test": "exit 0",
    "release": "./npm_scripts/release.sh"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^0.14.0"
  },
  "devDependencies": {
    "babel": "^5.8.29",
    "babel-core": "^5.8.29",
    "babel-loader": "^5.3.2",
    "cz-conventional-changelog": "^1.1.4",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
